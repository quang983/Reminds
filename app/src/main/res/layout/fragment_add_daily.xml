<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp">

    <TextView
        android:id="@+id/tv_title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Thông tin"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_input_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_info">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Tên dự án *"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="2"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:textColor="@color/black"
            app:counterMaxLength="36" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_input_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_input_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_input_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="@string/desc_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="3"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_1"
            app:counterMaxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_title_frequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Tần suất *"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_input_desc" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_frequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_title_frequence"
        app:layout_constraintTop_toBottomOf="@id/tv_title_frequence"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_daily"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hằng ngày" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_weeks"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hằng tuần" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tv_pick_day_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày đặt nhắc nhở"
        app:layout_constraintStart_toStartOf="@id/chip_group_frequence"
        app:layout_constraintTop_toBottomOf="@id/chip_group_frequence" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_pick_day_remaining"
        app:layout_constraintTop_toBottomOf="@id/tv_pick_day_remaining"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T2" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T3" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T4" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T5" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T6" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T7" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CN" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tv_time_remaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Thông báo nhắc nhở vào lúc"
        app:layout_constraintEnd_toStartOf="@id/guide_half_percent"
        app:layout_constraintStart_toStartOf="@id/chip_group_days"
        app:layout_constraintTop_toBottomOf="@id/chip_group_days" />

    <TextView
        android:id="@+id/tv_time_remaining_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@id/tv_time_remaining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_half_percent"
        app:layout_constraintTop_toTopOf="@id/tv_time_remaining" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Ngày dự kiến kết thúc"
        app:layout_constraintEnd_toStartOf="@id/guide_half_percent"
        app:layout_constraintStart_toStartOf="@id/chip_group_frequence"
        app:layout_constraintTop_toBottomOf="@id/tv_time_remaining" />


    <TextView
        android:id="@+id/tv_time_end_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@id/tv_time_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_half_percent"
        app:layout_constraintTop_toTopOf="@id/tv_time_end" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_half_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_pick_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_pick_day_remaining,chip_group_days" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:id="@+id/btn_save"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="Tạo dự án"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_end"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>