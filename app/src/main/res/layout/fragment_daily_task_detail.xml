<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_between"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <com.dinuscxj.progressbar.CircleProgressBar
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintEnd_toStartOf="@id/guideline_between"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time_remaining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thoi gian canh bao"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_between"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="thoi gian du kien ket thuc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_between"
                app:layout_constraintTop_toBottomOf="@id/tv_time_remaining" />

            <TextView
                android:id="@+id/tv_day_lost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cac ngay da bo lo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_between"
                app:layout_constraintTop_toBottomOf="@id/tv_time_end" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        app:cv_dayViewResource="@layout/calendar_day"
        app:cv_hasBoundaries="false"
        app:cv_inDateStyle="none"
        app:cv_maxRowCount="1"
        app:cv_orientation="horizontal"
        app:cv_outDateStyle="none"
        app:cv_scrollMode="continuous"
        app:layout_constraintTop_toBottomOf="@id/card_container" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slide_to_unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="Example" />

</androidx.constraintlayout.widget.ConstraintLayout>