<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_state_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="6"
        android:max="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_welcome" />

    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        app:cv_dayViewResource="@layout/calendar_day"
        app:cv_hasBoundaries="false"
        app:cv_inDateStyle="none"
        app:cv_maxRowCount="1"
        app:cv_orientation="horizontal"
        app:cv_outDateStyle="none"
        app:cv_scrollMode="continuous"
        app:layout_constraintTop_toBottomOf="@id/progress_state_task" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slide_to_unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="Example" />

</androidx.constraintlayout.widget.ConstraintLayout>